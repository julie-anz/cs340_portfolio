{% extends "main.j2" %}
{% block content %}

<h1>Resources</h1>

<h2> {{heading}} </h2>

{# READ table #}
<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            {% for header in headers %}
            <th>{{ header }}</th>
            {% endfor %}
        </tr>
    </thead>

    <tbody>
        {% for resource in resources %}
        <tr>
            <td>{{ resource.resourceName }}</td>
            <td>{{ resource.resourceDescription }}</td>
            <td>{{ resource.firstName }}</td>
            <td>{{ resource.lastName }}</td>


            {# DELETE form #}
            <form id="delete_resource_form" action="/delete" method="POST">
                <input type="hidden" name="table" value="resources">
                <input type="hidden" name="id" value="{{ resource.resourceID }}">
                <input type="hidden" name="name" value="{{ resource.firstName }} {{ resource.lastName }}">
                <td>
                    <button type="submit">
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {% endfor %}
    </tbody>
</table>

{# UPDATE form #}
<div>
    <h6>Update a Resource</h6>
    <form class="cuForm" id="update_resource_form" action="/update" method="POST">
        <input type="hidden" name="table" value="resources">
        <label for="update_id">Resource to Update: </label>
        <select name="update_id" id="update_resource_id" required>
            <option value="" disabled selected>Select a resource</option>
            {% for resource in resources %}
            <option value="{{resource.resourceID}}" required>
                {{resource.resourceName}}
                -
                {{resource.resourceDescription}}
            </option>
            {% endfor %}
        </select>

        <label for="update_data">New Description: </label>
        <input type="text" name="update_data" id="update_resource_description">

        <input type="submit">
    </form>
</div>


{# CREATE form #}
<div>
    <h6>Create a Resource</h6>
    <form class="cuForm" id="create_resource_form" action="/create" method="POST">
        <input type="hidden" name="table" value="resources">

        <label for="create_resource_name">Name: </label>
        <input type="text" name="create_resource_name" id="create_resource_name">

        <label for="create_resource_description">Description: </label>
        <input type="text" name="create_resource_description" id="create_resource_description">

        <label for="create_owner">Owner: </label>
        <select name="create_owner" id="create_owner" required>
            <option value="NULL" selected>Select a User</option>
            <option value="NULL">&lt; None &gt;</option>
            {% for user in users %}
            <option value="{{user.userID}}" required>
                {{user.name}}
            </option>
            {% endfor %}
        </select>

        <input type="submit">
    </form>
</div>

{% endblock %}

{% extends "main.j2" %}
{% block content %}

<h1>Users</h1>

<h2> {{heading}} </h2>

{# READ table #}
<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            {% for header in headers %}
            <th>{{ header }}</th>
            {% endfor %}
        </tr>
    </thead>

    <tbody>
        {# For each row, print the id, fname, lname, homeworld and age #}
        {% for user in users %}
        <tr>
            <td>{{ user.firstName }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{ user.email}}</td>
            <td>{{ user.phone}}</td>

            {# DELETE form #}
            <form id="delete_user_form" action="/delete" method="POST">
                <input type="hidden" name="table" value="users">
                <input type="hidden" name="id" value="{{ user.userID }}">
                <input type="hidden" name="name" value="{{ user.firstName }} {{ user.lastName }}">
                <td>
                    <button type="submit">
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {% endfor %}
    </tbody>
</table>


{# CREATE form #}
<div>
    <h6>Create a User</h6>
    <form class="cuForm" id="create_user_form" action="/create" method="POST">
        <input type="hidden" name="table" value="users">

        <label for="fname">First Name: </label>
        <input type="text" name="fname" id="create_fname">

        <label for="lname">Last Name: </label>
        <input type="text" name="lname" id="create_lname">

        <label for="phone">Phone Number: </label>
        <input type="text" name="phone" id="create_phone">

        <label for="user_email">Email: </label>
        <input type="email" name="user_email" id="create_email">

        <input type="submit">
    </form>
</div>


{% endblock %}
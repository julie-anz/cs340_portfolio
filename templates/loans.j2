{% extends "main.j2" %}
{% block db_table %}

<h1>loans</h1>

<h2> {{heading}} </h2>

{# READ table #}
<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            {% for header in headers %}
            <th>{{ header }}</th>
            {% endfor %}
        </tr>
    </thead>

    <tbody>
        {# For each row, print the id, fname, lname, homeworld and age #}
        {% for loan in loans %}
        <tr>
            <td>{{ loan.startDate }}</td>
            <td>{{ loan.dueDate }}</td>
            <td>{{ loan.resourceName }} </td>
            <td>{{ loan.firstName }}</td>
            <td>{{ loan.lastName }}</td>

            {# DELETE form #}
            <form id="delete_loan_form" action="/delete" method="POST">
                <input type="hidden" name="table" value="loans">
                <input type="hidden" name="id" value="{{ loan.loanID }}">
                <input type="hidden" name="name" value="{{ loan.firstName }} {{ loan.lastName }}">
                <td>
                    <button type="submit">
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block reset %}
{{ super() }}
{% endblock %}

{% block forms %}
{# INSERT form #}
<div class="create-form">
    <h6>Create a Loan</h6>
    <form class="cuForm" id="create_loan_form" action="/create", method="POST">
        <input type="hidden" name="table" value="loans">

        <label for="sdate">Start Date:&#20; </label>
            <input type="date" name="sdate" id="create_sdate" required>

            <br>
            <br>

            <label for="ddate">Due Date:&#20;&#20; </label>
            <input type="date" name="ddate" id="create_ddate" required>

            <br>
            <br>

        <label for="loan_user"> Borrower:&#20;&#20; </label>
        <select name="loan_user" id="loan_user" required>
            <option value="NULL" selected>Select a Borrower</option>
            {% for user in users %}
            <option value="{{user.userID}}" required>
                {{user.name}} 
            </option>
            {% endfor %}
        </select>

        <br>
        <br>

        <label for="loan_resourse"> Resource:&#20;&#20; </label>
        <select name="loan_resourse" id="loan_resourse" required>
            <option value="NULL" selected>Select a Resource</option>
            {% for resource in resources %}
            <option value="{{resource.resourceID}}" required>
                {{resource.resourceName}}
                -
                {{resource.resourceDescription}}
            </option>
            {% endfor %}
        </select>

        <br>
        <br>

        <input type="submit" class="submit-btn">
    </form>
</div>
{% endblock %}
